<configuration>
	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[%d{HH:mm:ss.SSS} %level]: %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>tests.log</file>
		<append>true</append>
		<encoder>
			<pattern>[%d{HH:mm:ss.SSS} %level]: %msg%n
			</pattern>
		</encoder>
	</appender>

	<root level="debug">
		<appender-ref ref="STDOUT" />
	</root>
	
	<root level="info">
		<appender-ref ref="FILE" />
	</root>
</configuration>